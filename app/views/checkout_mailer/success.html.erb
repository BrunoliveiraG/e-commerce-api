<h1><%= I18n.t('checkout_mailer.success.title', order_number: params[:order].id) %></h1>
<p><%= I18n.t('checkout_mailer.success.body') %></p>
    <% if params[:order].billet? %>
      <p><%= I18n.t('checkout_mailer.success.billet_payment.html', billet_link: params[:order].juno_charges.first.billet_url) %></p>
    <% elsif params[:order].credit_card? %>
      <p><%= I18n.t('checkout_mailer.success.credit_card_payment') %></p>
<% end %>